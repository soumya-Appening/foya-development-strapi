{
  "kind": "collectionType",
  "collectionName": "job_openings",
  "info": {
    "singularName": "job-opening",
    "pluralName": "job-openings",
    "displayName": "Job Opening"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "position": {
      "type": "string",
      "required": true
    },
    "job_type": {
      "type": "enumeration",
      "required": true,
      "default": "Full-time",
      "enum": [
        "Full-time",
        "Part-time",
        "Contractor",
        "Temporary",
        "Intern",
        "Volunteer",
        "Per diem",
        "Other"
      ]
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "isRemote": {
      "type": "boolean"
    },
    "location": {
      "type": "string",
      "required": true
    },
    "working_hour": {
      "type": "string"
    },
    "base_salary": {
      "type": "string"
    },
    "date_posted": {
      "type": "date"
    },
    "experience": {
      "type": "string"
    },
    "valid_through": {
      "type": "date"
    },
    "dynamic_details": {
      "type": "component",
      "component": "shared.dynamic-details",
      "repeatable": true
    }
  }
}
